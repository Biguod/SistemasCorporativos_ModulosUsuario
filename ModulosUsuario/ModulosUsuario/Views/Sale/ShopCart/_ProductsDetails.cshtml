@model ModulosUsuario.Models.ShopCartViewModel


@if (Model.Products != null)
{
    for (int i = 0; i < Model.Products.Count; i++)
    {
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/img/uploaded/products/@Model.Products[i].ProductTransaction.Product.ProductImage" class="card-img" alt="..." style="height: 20vh; width: auto;">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        @Html.HiddenFor(h => Model.Products[i].ProductTransactionId)
                        @Html.HiddenFor(h => Model.Products[i].SaleId)
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="card-title">@Model.Products[i].ProductTransaction.Product.Name</h5>
                            </div>
                            <div class="col-md-6">
                                <p class="card-text">@Model.Products[i].ProductTransaction.Product.Description.</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text text-bold text-success">Quantidade: @Model.Products[i].Quantity</p>
                            </div>
                            <div class="col-md-6">
                                <p class="card-text text-bold text-success">Preço Total: R$@Model.Products[i].TotalPrice.ToString("0.00")</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="row col-md-12" style="height: 100%; align-items: center; display: inline-flex;">
                        <button deleteSaleId="@Model.Products[i].ProductTransactionId" type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="saleController.deleteModalId(this)">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Confirmar Deleção</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir esse pedido?
            </div>
            <div class="modal-footer">
                <input id="buttonConfirm" deleteSaleId="" action="" type="button" class="btn bg-danger" value="Excluir" onclick="saleController.deleteSale(this)" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>