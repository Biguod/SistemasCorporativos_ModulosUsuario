@model ModulosUsuario.Models.AddressUser

<form asp-controller="User" asp-action="CreateOrEditAddress" asp-antiforgery="true" method="post">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <h3 class="card-title">Endereço</h3>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.HiddenFor(h => h.UserId)
                    @Html.HiddenFor(h => h.AddressId)
                    <div class="row">
                        <div class="form-group col-md-7">
                            <label asp-for="Street"></label>
                            <input asp-for="Street"  class="form-control" />
                            <span asp-validation-for="Street" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Number"></label>
                            <input asp-for="Number"  class="form-control" />
                            <span asp-validation-for="Number" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="District"></label>
                            <input asp-for="District"  class="form-control" />
                            <span asp-validation-for="District" class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="PostalCode"></label>
                            <input asp-for="PostalCode"  class="form-control" />
                            <span asp-validation-for="PostalCode" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="City"></label>
                            @Html.DropDownListFor(model => model.CityId, ViewBag.CityList as SelectList, new { @class = "form-control" })
                            <span asp-validation-for="CityId" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="State"></label>
                            @Html.DropDownListFor(model => model.StateId, ViewBag.StateList as SelectList, new { @class = "form-control" })
                            <span asp-validation-for="StateId" class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div style="text-align:end">
                        <input type="submit" class="btn btn-success" value="Salvar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
