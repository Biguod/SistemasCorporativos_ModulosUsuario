@model TransactionsViewModel
<div class="card">
    <div class="card-header" id="headingThree">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                Transações de Ferramentas
            </button>
            @Html.ActionLink("", "CreateToolTransaction", "Transaction", new { stockId = Model.Stock.StockId }, new { @class = "fas fa-plus-square float-right", title = "Nova Transação" })
        </h5>
    </div>
    <div id="collapseThree" class="collapse show" aria-labelledby="headingThree" data-parent="#accordion">
        <div class="card-body">
            <div class="row">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Ferramenta")
                            </th>
                            <th>
                                @Html.DisplayName("Quantidade")
                            </th>
                            <th>
                                @Html.DisplayName("Valor Unitário")
                            </th>
                            <th>
                                @Html.DisplayName("Valor Total")
                            </th>
                            <th>
                                @Html.DisplayName("Transação")
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ToolsTransactions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tool.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    R$@Html.DisplayFor(modelItem => item.UnityValue)
                                </td>
                                <td>
                                    R$@(item.UnityValue * item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransactionType.Description)
                                </td>
                                <td align="center">
                                    @if ("Furto" != item.TransactionType.Description)
                                    {
                                        @Html.ActionLink("", "DownloadDocumentTools", "Transaction", new { toolsTransactionId = item.ToolsTransactionId }, new { @class = "fas fa-file-download", title = "Download documento fiscal" })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>