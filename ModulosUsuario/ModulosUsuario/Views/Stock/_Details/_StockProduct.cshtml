@model StocksViewModel

<div class="card">
    <div class="card-header" id="headingOne">
        <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Estoque dos Produtos
            </button>
        </h5>
    </div>
    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body">
            <div class="row">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Id do Produto")
                            </th>
                            <th>
                                @Html.DisplayName("Produto")
                            </th>
                            <th>
                                @Html.DisplayName("Preço médio")
                            </th>
                            <th>
                                @Html.DisplayName("Quantidade em estoque")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StockProducts)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    R$@Html.DisplayFor(modelItem => item.AverageCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StockQuantity)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
